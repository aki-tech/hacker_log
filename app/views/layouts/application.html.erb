<!DOCTYPE html>
<html>
  <head>
    <title>HackerLog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header_title">
        <%= link_to "hacker_log", root_path, class: "header_title_text" %>
      </div>
      <div class="header_right">
        <% if user_signed_in? %>
          <%= link_to "新規投稿", new_post_path, class: "header_right_btn" %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header_right_btns" %>
        <% else %>
          <%= link_to "マイページ", root_path, class: "header_right_btn" %>
          <%= link_to "タイマー", root_path, class: "header_right_btn" %>
          <%= link_to "ログイン", new_user_session_path, class: "header_right_btn" %>
          <%= link_to "新規登録", new_user_registration_path, class: "header_right_btns" %>
        <% end %>
      </div>
    </header>
    <div class="contents">
      <%= yield %>
    </div>
  </body>
</html>
